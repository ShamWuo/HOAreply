generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(cuid())
  email           String    @unique
  name            String?
  image           String?
  emailVerified   DateTime?
  passwordHash    String?
  createdAt       DateTime  @default(now())
  accounts        Account[]
  hoas            HOA[]
  assignedThreads EmailThread[] @relation("ThreadAssignedToUser")
  assignedRequests Request[]    @relation("RequestAssignedToUser")
  approvedDrafts   ReplyDraft[] @relation("ReplyDraftApprovedBy")
  sentDrafts       ReplyDraft[] @relation("ReplyDraftSentBy")
  auditLogs        AuditLog[]
  sessions        Session[]
}

model HOA {
  id           String        @id @default(cuid())
  name         String
  userId       String
  createdAt    DateTime      @default(now())
  threads      EmailThread[]
  gmailAccount GmailAccount?
  user         User          @relation(fields: [userId], references: [id])
  residents    Resident[]
  requests     Request[]
  policyTemplates PolicyTemplate[]
  auditLogs    AuditLog[]
}

model GmailAccount {
  id           String        @id @default(cuid())
  hoaId        String        @unique
  email        String        @unique
  accessToken  String
  refreshToken String
  expiryDate   DateTime
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @default(now()) @updatedAt
  lastPolledAt DateTime?
  lastPollError String?
  threads      EmailThread[]
  hoa          HOA           @relation(fields: [hoaId], references: [id], onDelete: Cascade)
  pollRuns     PollRun[]
}

model EmailThread {
  id             String         @id @default(cuid())
  hoaId          String
  gmailAccountId String?
  gmailThreadId  String         @unique
  subject        String
  status         ThreadStatus   @default(NEW)
  assignedToUserId String?
  unreadCount    Int            @default(0)
  category       String?
  priority       String?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @default(now()) @updatedAt
  messages       EmailMessage[]
  gmailAccount   GmailAccount?  @relation(fields: [gmailAccountId], references: [id])
  hoa            HOA            @relation(fields: [hoaId], references: [id], onDelete: Cascade)
  assignedToUser User?          @relation("ThreadAssignedToUser", fields: [assignedToUserId], references: [id])
  classifications ThreadClassificationHistory[]
  request        Request?

  @@index([hoaId])
  @@index([status])
}

model EmailMessage {
  id             String           @id @default(cuid())
  threadId       String
  gmailMessageId String?          @unique
  direction      MessageDirection
  from           String
  to             String
  bodyText       String
  bodyHtml       String?
  receivedAt     DateTime
  metaJson       Json?
  aiReply        AIReply?
  residentId     String?
  replyDrafts    ReplyDraft[]
  thread         EmailThread      @relation(fields: [threadId], references: [id], onDelete: Cascade)
  resident       Resident?        @relation(fields: [residentId], references: [id])

  @@index([threadId])
  @@index([residentId])
}

model Resident {
  id             String   @id @default(cuid())
  hoaId          String
  email          String
  name           String?
  firstMessageAt DateTime @default(now())
  lastMessageAt  DateTime @default(now())
  messageCount   Int      @default(1)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @default(now()) @updatedAt
  hoa            HOA      @relation(fields: [hoaId], references: [id], onDelete: Cascade)
  messages       EmailMessage[]
  requests       Request[]

  @@unique([hoaId, email])
  @@index([hoaId])
}

model AIReply {
  id        String       @id @default(cuid())
  messageId String       @unique
  replyText String
  sent      Boolean      @default(false)
  error     String?
  createdAt DateTime     @default(now())
  sentAt    DateTime?
  message   EmailMessage @relation(fields: [messageId], references: [id], onDelete: Cascade)
}

model ThreadClassificationHistory {
  id        String   @id @default(cuid())
  threadId  String
  category  String?
  priority  String?
  createdAt DateTime @default(now())
  thread    EmailThread @relation(fields: [threadId], references: [id], onDelete: Cascade)

  @@index([threadId])
}

model Request {
  id             String           @id @default(cuid())
  hoaId          String
  threadId       String           @unique
  subject        String
  summary        String?
  residentId     String?
  category       RequestCategory
  priority       RequestPriority  @default(NORMAL)
  status         RequestStatus    @default(NEW)
  assigneeUserId String?
  slaDueAt       DateTime?
  lastActionAt   DateTime         @default(now())
  classification Json?
  missingInfo    String[]         @default([])
  hasLegalRisk   Boolean          @default(false)
  flags          Json?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  closedAt       DateTime?

  thread         EmailThread      @relation(fields: [threadId], references: [id], onDelete: Cascade)
  hoa            HOA              @relation(fields: [hoaId], references: [id], onDelete: Cascade)
  resident       Resident?        @relation(fields: [residentId], references: [id])
  assignee       User?            @relation("RequestAssignedToUser", fields: [assigneeUserId], references: [id])
  drafts         ReplyDraft[]
  auditLogs      AuditLog[]

  @@index([hoaId])
  @@index([status])
  @@index([priority])
  @@index([residentId])
  @@index([hoaId, status, priority, slaDueAt])
}

model PolicyTemplate {
  id               String            @id @default(cuid())
  hoaId            String
  category         RequestCategory
  priority         RequestPriority?
  title            String
  bodyTemplate     String
  isDefault        Boolean           @default(false)
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt

  hoa              HOA               @relation(fields: [hoaId], references: [id], onDelete: Cascade)
  drafts           ReplyDraft[]

  @@index([hoaId, category])
  @@index([hoaId, category, priority])
}

model ReplyDraft {
  id               String         @id @default(cuid())
  requestId        String
  templateId       String?
  messageId        String?
  content          String
  createdAt        DateTime       @default(now())
  createdBy        DraftAuthor    @default(ai)
  approvedAt       DateTime?
  approvedByUserId String?
  sentAt           DateTime?
  sentByUserId     String?

  request          Request        @relation(fields: [requestId], references: [id], onDelete: Cascade)
  template         PolicyTemplate? @relation(fields: [templateId], references: [id])
  approvedBy       User?          @relation("ReplyDraftApprovedBy", fields: [approvedByUserId], references: [id])
  sentBy           User?          @relation("ReplyDraftSentBy", fields: [sentByUserId], references: [id])
  message          EmailMessage?  @relation(fields: [messageId], references: [id])

  @@index([requestId])
  @@index([createdAt])
}

model AuditLog {
  id        String      @id @default(cuid())
  hoaId     String
  userId    String?
  requestId String?
  action    AuditAction
  metadata  Json?
  createdAt DateTime    @default(now())

  hoa       HOA         @relation(fields: [hoaId], references: [id], onDelete: Cascade)
  user      User?       @relation(fields: [userId], references: [id])
  request   Request?    @relation(fields: [requestId], references: [id], onDelete: Cascade)

  @@index([hoaId])
  @@index([requestId])
  @@index([action])
}

model PollRun {
  id            String       @id @default(cuid())
  gmailAccountId String
  startedAt     DateTime     @default(now())
  completedAt   DateTime?
  status        String
  processedCount Int         @default(0)
  error         String?
  gmailAccount  GmailAccount @relation(fields: [gmailAccountId], references: [id], onDelete: Cascade)

  @@index([gmailAccountId])
  @@index([startedAt])
}

model JobLock {
  job         String   @id
  lockedUntil DateTime
  updatedAt   DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum MessageDirection {
  INCOMING
  OUTGOING
}

enum ThreadStatus {
  NEW
  PENDING
  AWAITING_RESIDENT
  FOLLOW_UP
  RESOLVED
  ERROR
}

enum RequestCategory {
  MAINTENANCE
  VIOLATION
  BILLING
  GENERAL
  BOARD
  LEGAL
  SPAM
}

enum RequestPriority {
  LOW
  NORMAL
  HIGH
  URGENT
}

enum RequestStatus {
  NEW
  NEEDS_INFO
  IN_PROGRESS
  AWAITING_REPLY
  RESOLVED
  CLOSED
}

enum AuditAction {
  EMAIL_RECEIVED
  REQUEST_CREATED
  CLASSIFIED
  DRAFT_GENERATED
  DRAFT_REGENERATED
  STATUS_CHANGED
  APPROVED
  SENT
}

enum DraftAuthor {
  ai
  user
}
